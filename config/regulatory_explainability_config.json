      "max_evidence_items_per_chain": 50,
      "max_cross_references_per_item": 10,
      "evidence_generation_timeout_seconds": 30,
      "narrative_generation_timeout_seconds": 60,
      "parallel_processing": {
        "enabled": true,
        "max_workers": 4,
        "chunk_size": 10
      },
      "caching": {
        "enabled": true,
        "cache_duration_minutes": 30,
        "max_cache_size_mb": 100
      }
    },
    
    "reporting": {
      "auto_generate_stor_reports": true,
      "include_cross_account_analysis": true,
      "enable_temporal_clustering": true,
      "regulatory_narrative_language": "en",
      "audit_trail_enabled": true,
      "export_formats": ["json", "xml", "pdf"],
      "template_version": "2.0",
      
      "narrative_templates": {
        "header_template": "templates/regulatory_header.txt",
        "executive_summary_template": "templates/executive_summary.txt",
        "evidence_analysis_template": "templates/evidence_analysis.txt",
        "conclusions_template": "templates/regulatory_conclusions.txt",
        "audit_trail_template": "templates/audit_trail.txt"
      }
    },
    
    "validation": {
      "enabled": true,
      "strict_mode": false,
      "validate_cross_references": true,
      "validate_evidence_strength": true,
      "validate_framework_compliance": true,
      "performance_benchmarks": {
        "max_evidence_generation_time_ms": 1000,
        "max_narrative_generation_time_ms": 5000,
        "max_memory_usage_mb": 500
      }
    },
    
    "logging": {
