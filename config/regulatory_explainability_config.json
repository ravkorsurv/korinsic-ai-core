      "audit_level": "INFO",
      "log_evidence_access": true,
      "log_narrative_generation": true,
      "log_framework_mappings": true,
      "retention_days": 90,
      "sensitive_data_logging": false
    },
    
    "integration": {
      "bayesian_models": {
        "auto_detect": true,
        "require_explainability_engine": true,
        "require_evidence_generation": true,
        "require_framework_mapping": true
      },
      "external_systems": {
        "stor_filing_api": {
          "enabled": true,
          "endpoint": "https://api.stor.gov/v2/filings",
          "timeout_seconds": 30,
          "retry_attempts": 3
        },
        "audit_system": {
          "enabled": true,
          "endpoint": "https://audit.internal/api/v1/events",
          "timeout_seconds": 10
        }
      }
    },
    
    "compliance_matrix": {
      "required_frameworks": ["MAR_ARTICLE_8", "MAR_ARTICLE_12", "STOR_REQUIREMENTS"],
      "evidence_types": {
        "trading_pattern": {
          "required": true,
          "minimum_strength": 0.5,
          "frameworks": ["MAR_ARTICLE_8", "MAR_ARTICLE_12", "STOR_REQUIREMENTS"]
        },
        "timing_anomaly": {
          "required": true,
          "minimum_strength": 0.6,
          "frameworks": ["MAR_ARTICLE_8", "STOR_REQUIREMENTS"]
        },
        "communication": {
          "required": false,
          "minimum_strength": 0.7,
          "frameworks": ["MAR_ARTICLE_8", "MIFID_II_ARTICLE_17"]
        },
        "cross_account_correlation": {
          "required": true,
          "minimum_strength": 0.6,
          "frameworks": ["MAR_ARTICLE_8", "MAR_ARTICLE_12", "STOR_REQUIREMENTS"]
        }
      }
