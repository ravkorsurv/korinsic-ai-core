# Kor.ai Surveillance Platform Environment Configuration

# Application settings
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=5000

# Risk thresholds
INSIDER_HIGH_THRESHOLD=0.7
INSIDER_MEDIUM_THRESHOLD=0.4
SPOOFING_HIGH_THRESHOLD=0.8
SPOOFING_MEDIUM_THRESHOLD=0.5

# Model settings
BAYESIAN_ENGINE=pgmpy
MODEL_UPDATE_INTERVAL=86400

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Database (optional - for persistence)
DATABASE_URL=sqlite:///surveillance.db

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379/0

# API Keys (if needed for external services)
# EXTERNAL_API_KEY=your_api_key_here